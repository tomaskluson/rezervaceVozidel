{% extends "base.html.twig" %}

{% block title %}Změnit vlastnosti vozidla{% endblock %}

{% block body %}
    <div class="panel panel-info col-sm-12">
        <div class="panel-heading col-sm-8">
            <h3 class="text-center">Změnit vlastnosti vozidla</h3>
        </div>

        <div class="panel-body col-sm-8 float-left">
            {% include "admin/include_form/carForm.html.twig" %}
            <div class="mt-3">
                <span class="p-1 font-weight-bold rounded" style="color: {{ form.vars.value.colorText }}; background: {{ form.vars.value.colorBackground }}">Původní barva</span>
                <span class="fas fa-arrow-right"></span>
                <span class="p-1 font-weight-bold rounded" id="colorPreview">Nová barva</span>
            </div>
        </div>

        <div class="mt-3 col-sm-4 float-left">
            <span class="col">Náhled vozidla:</span>
            <img src="{{ vehicles_directory }}/{{ image }}" class="col" alt="Náhled vozidla">
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include "admin/include_js/carColors.html.twig" %}
{% endblock %}